<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.project1.ForgotPasswordController"
            stylesheets="@../style/forgot_password.css"
            prefWidth="600" prefHeight="400">

    <Button fx:id="backButton"
            text="← Back"
            layoutX="10"
            layoutY="10"
            onAction="#handleBackToSignIn"
            id="backButton"/>

    <VBox alignment="CENTER"
          spacing="14"
          layoutX="60"
          layoutY="40"
          prefWidth="480"
          prefHeight="320"
          styleClass="form-container">

        <Label text="Reset Password" styleClass="title-label"/>

        <Label text="Enter your registered email address:"
               wrapText="true"
               styleClass="instruction-label"/>

        <TextField fx:id="emailField"
                   promptText="your email address"
                   styleClass="email-field"/>

        <Button text="Send Reset Link"
                onAction="#handleSendResetLink"
                styleClass="send-button"/>

        <Label fx:id="infoLabel"
               text=""
               styleClass="feedback-label"/>

    </VBox>
</AnchorPane>
