<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="450.0" prefWidth="400.0"
            stylesheets="@../style/welcome.css"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="com.project1.WelcomeController"> 
            <!--düzeltildi -by Utku-: sadece class adı yazıyorsa hata alırız paketAdı.ClassAdı olmalı  -->


    <VBox alignment="CENTER" layoutX="50.0" layoutY="40.0" spacing="10.0">

        <Text text="BILCALL" styleClass="title-text" />

        <ImageView fx:id="logoImage" fitHeight="180.0" fitWidth="180.0" preserveRatio="true">
            <image>
                <Image url="@../assets/newLogo.png" />
            </image>
            <clip>
                <Circle radius="90" centerX="90" centerY="90" />
            </clip>
        </ImageView>

        <Text text="One Campus, Many Voices!" styleClass="slogan-text" />

        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="signInButton" text="Sign In" />
            <Button fx:id="signUpButton" text="Sign Up" />
        </HBox>

    </VBox>
</AnchorPane>
